@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="padding1">
    <h4>En iyi 6 Blog Sayfası</h4>

    <div class="box-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <a href="~/Blog/BlogDetay/@x.ID">
                    <img src="@x.BlogImage" alt="" style="width:250px;height:70px;" />
                </a>
            </div>
            <div class="bot-desc">
                <p href="">@x.Aciklama.Substring(0, 50)...</p>
            </div>
            <div class="clear"></div>
        }
    </div>
    @Html.Action("Partial3", "Default")
</div>